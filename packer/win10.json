{
    "builders": [
      {
        "type": "virtualbox-iso",
        "iso_url": "{{user `iso_url`}}",
        "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
        "headless": "{{user `headless`}}",
        "boot_wait": "2m",
        "ssh_username": "user",
        "ssh_password": "user",
        "ssh_wait_timeout": "2h",
        "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
        "guest_os_type": "Windows10_64",
        "disk_size": "{{user `disk_size`}}",
        "gfx_vram_size": 32,
        "floppy_files": [
          "{{user `autounattend`}}",
          "./scripts/windows-openssh.ps1"
        ],
        "vboxmanage": [
          [
            "modifyvm",
            "{{.Name}}",
            "--memory",
            "{{user `memory_size`}}"
          ],
          [
            "modifyvm",
            "{{.Name}}",
            "--cpus",
            "{{user `cpus`}}"
          ],
          [
            "modifyvm",
            "{{.Name}}",
            "--clipboard-mode",
            "bidirectional"
          ],
          [
            "modifyvm",
            "{{.Name}}",
            "--draganddrop",
            "bidirectional"
          ],
          [
            "modifyvm",
            "{{.Name}}",
            "--vrde",
            "off"
          ],
          [
            "modifyvm",
            "{{.Name}}",
            "--graphicscontroller",
            "vboxsvga"
          ]
        ],
        "vm_name": "packer-windows-10"
      }
    ],
    "provisioners": [
      {
        "type": "windows-shell",
        "scripts": [
          "./scripts/windows-vbox-guest-additions.bat"
        ]
      }
    ],
    "variables": {
      "iso_url": "https://software-download.microsoft.com/download/sg/444969d5-f34g-4e03-ac9d-1f9786c69161/19044.1288.211006-0501.21h2_release_svc_refresh_CLIENTENTERPRISEEVAL_OEMRET_x64FRE_en-us.iso",
      "iso_checksum_type": "sha256",
      "iso_checksum": "69EFAC1DF9EC8066341D8C9B62297DDECE0E6B805533FDB6DD66BC8034FBA27A",
      "autounattend": "./files/Autounattend.xml",
      "headless": "true",
      "cpus": "2",
      "memory_size": "4096",
      "disk_size": "61440"
    }
  }